<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#03403A"
    android:layout_height="match_parent"
    tools:context=".logIn_Activity">




    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/llinearbg"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/useremailsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"
            android:drawableStart="@drawable/eamil"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#151414"
            android:textColorHint="#5A5252"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwordsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"
            android:drawableStart="@drawable/password"
            android:drawablePadding="10dp"
            android:drawableTint="@color/black"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#151414"
            android:textColorHint="#5A5252"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/CreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:gravity="right"
            android:padding="2dp"
            android:text="Create Account"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/signinbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            android:layout_marginEnd="10dp"
            android:background="@drawable/btg"
            android:text="Log in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/googlebuttonIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="10dp"
                android:background="@drawable/googlecolor"
                android:drawableStart="@drawable/gg"
                android:gravity="center"
                android:padding="6dp" />

            <TextView
                android:id="@+id/facebook"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/facebookcolor"
                android:drawableStart="@drawable/fb"
                android:padding="6dp"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/viewbg"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iamge1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"

        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>